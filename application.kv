<Button>:
    size_hint :(0.2,0.5) 

<Label>:
    font_size : "24sp"

<MainWindow>:

    FloatLayout:
        size: self.parent.size
        
        
        BoxLayout:
            id: DispGraph
            orientation : "horizontal"
            size_hint: (0.4,0.4)
            pos_hint: {"x":0.3, "y":0.3}

            progress:0
        
            
            canvas:
                
                Color:
                    rgba: 0,1,1,1
                    

                #Rectangle:
                #    pos: self.pos
                #    size: self.size

                
                Ellipse:
                    id : sap
                    pos: (root.x + root.width - min(self.size)-50)/2,(root.y + root.height - min(self.size)-50)/2
                    size: min(self.size)+50,min(self.size)+50
                    source: 'progressring1.png' 
                    angle_start: -90
                    angle_end: self.progress
        
        Label:
            
            id: DispTime
            size_hint: (0.4,0.4)
            pos_hint: {"x":0.3, "y":0.4}
            text: "00:10"

        BoxLayout:
            orientation : "horizontal"
            size_hint : (0.6,0.2) 
            pos_hint: {"x":0.2, "y":0.1}
            Label:
                id: label1
                text: "1"
            
            Label:
                id: label2
                text: "2"

            Label:
                id: label3
                text: "3"

            Label:
                id: label4
                text: "4"


        Button:
            pos_hint: {"top":0.9, "x":0.1}  
            size_hint : (0.1,0.1) 
            id: PlayPause
            text: "Start" 
            on_press: root.play_pause()
        
        Button:
            size_hint : (0.1,0.1) 
            pos_hint: {"top":0.9, "right":0.9}
            id: reset
            text: "Reset"  
            on_press: root.complete_reset()

        Label:
            id: process
            pos_hint: {"x":0.3, "y":0.45}
            size_hint: (0.4,0.1)
            text: "WORK"                         
