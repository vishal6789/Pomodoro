<Button>:
    size_hint :(0.4,0.4) 


<MainWindow>:

    #PlayPause: PlayPause
    #DispTime: DispTime
    #Reset: reset

    FloatLayout:
        size: self.parent.size
        
        Label:
            id: DispTime
            size_hint: (0.4,0.4)
            pos_hint: {"x":0.3, "y":0.4}
            text: "00:10"

        BoxLayout:
            orientation : "horizontal"
            size_hint : (0.4,0.2) 
            pos_hint: {"x":0.3, "y":0.1}
            Button:
                id: PlayPause
                text: "Start" 
                on_press: root.play_pause()
            
            Button:
                id: reset
                text: "Reset"  
                on_press: root.reset_timer()                         